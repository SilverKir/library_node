<%- include('../port/layout-start', {title: title}) %> <%-
include('../port/menu.ejs') %> <% if (books.length) { %>

<table class="table table-striped table-sm mt-3">
  <thead>
    <tr>
      <th scope="col">№№</th>
      <th scope="col">Title</th>
      <th scope="col">Authors</th>
      <th class="text-right" scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <%books.map((book,index) => { %>
    <tr>
      <th scope="row"><%= index+1 %></th>
      <td><%= book.title %></td>
      <td><%= book.authors %></td>
      <td class="text-right">
        <a class="btn btn-sm btn-success" href="/url/books/<%= book.id %>">
          <i class="fa fa-eye" aria-hidden="true"></i>
        </a>
        <a
          class="btn btn-sm btn-primary"
          href="/url/books/update/<%= book.id %>"
        >
          <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        <form
          action="/url/books/delete/<%= book.id %>"
          method="POST"
          class="d-inline"
        >
          <button class="btn btn-sm btn-danger">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<% } else { %>
<h3>No books</h3>

<%} %> <%- include('../port/layout-end.ejs') %>
